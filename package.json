{
  "name": "express-barefoot-nomad",
  "version": "1.0.0",
  "description": "A platform for making company travel and accomodation easy and convinient",
  "main": "index.js",
  "scripts": {
    "start": "export NODE_ENV=production && npm run migrate && npm run build && node dist/index.js",
    "build": "rm -rf dist && mkdir dist && babel src -s -d dist",
    "dev": "export NODE_ENV=development && nodemon --exec babel-node src/index.js",
    "test": "export NODE_ENV=test && npm run migrate:refresh && npm run seed && nyc --reporter=html --reporter=text mocha src/**/*.js --timeout 15000 --require @babel/register ./test --exit",
    "coverage": "nyc --reporter=lcov --reporter=text-lcov | coveralls",
    "migrate": "sequelize db:migrate",
    "seed": "sequelize db:seed:all",
    "migrate:reset": "sequelize db:migrate:undo:all",
    "migrate:refresh": "npm run migrate:reset && npm run migrate"
  },
  "author": "Andela Simulations Programme",
  "license": "MIT",
  "dependencies": {
    "@hapi/joi": "^15.1.1",
    "@sendgrid/mail": "^6.4.0",
    "bcrypt": "^3.0.6",
    "body-parser": "^1.18.3",
    "cors": "^2.8.4",
    "dotenv": "^6.0.0",
    "errorhandler": "^1.5.0",
    "express": "^4.16.3",
    "express-jwt": "^5.3.1",
    "express-session": "^1.15.6",
    "express-validator": "^6.2.0",
    "jsonwebtoken": "^8.3.0",
    "method-override": "^2.3.10",
    "methods": "^1.1.2",
    "morgan": "^1.9.1",
    "passport": "^0.4.0",
    "passport-facebook": "^3.0.0",
    "passport-google-oauth": "^2.0.0",
    "passport-local": "^1.0.0",
    "pg": "^7.12.1",
    "pg-hstore": "^2.3.3",
    "request": "^2.87.0",
    "sequelize": "^5.18.1",
    "swagger-ui-express": "^4.0.7",
    "underscore": "^1.9.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.5.5",
    "@babel/core": "^7.5.5",
    "@babel/node": "^7.5.5",
    "@babel/plugin-transform-runtime": "^7.5.5",
    "@babel/polyfill": "^7.4.4",
    "@babel/preset-env": "^7.5.5",
    "@babel/register": "^7.5.5",
    "@babel/runtime": "^7.5.5",
    "babel-loader": "^8.0.6",
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "coveralls": "^3.0.6",
    "cross-env": "^5.2.1",
    "eslint": "^6.3.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-plugin-import": "^2.18.2",
    "mocha": "^6.2.0",
    "mocha-lcov-reporter": "^1.3.0",
    "nock": "^11.3.3",
    "nodemon": "^1.19.2",
    "nyc": "^14.1.1",
    "sequelize-cli": "^5.5.1",
    "sinon": "^7.4.2",
    "sinon-chai": "^3.3.0",
    "sinon-express-mock": "^2.2.1",
    "supertest": "^4.0.2"
  }
}
